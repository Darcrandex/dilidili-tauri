{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "dilidili",
  "version": "3.0.3",
  "identifier": "com.dilidili.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3090",
    "beforeDevCommand": "pnpm prebuild && pnpm dev",
    "beforeBuildCommand": "pnpm prebuild && pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "dilidili",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://ipc.localhost",
        "img-src": "'self' asset: http://asset.localhost blob: data: tauri: http://tauri.localhost",
        "style-src": "'unsafe-inline' 'self'"
      },
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**/*"
        ]
      }
    }
  },
  "plugins": {
    "shell": {
      "open": "*"
    }
  },
  "bundle": {
    "externalBin": [
      "binaries/ffmpeg"
    ],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
